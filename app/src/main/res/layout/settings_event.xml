<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">
    <!--android:id="@+id/"-->

        <Button
            android:id="@+id/EventstartB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event start" />

        <Button
            android:id="@+id/EventendB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event end"
            android:layout_below="@+id/Tdate_start"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/Tdate_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starting date"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_below="@+id/EventstartB"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/Ttime_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starting time"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignTop="@+id/Tdate_start"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="54dp"
            android:layout_marginEnd="54dp" />

        <TextView
            android:id="@+id/Tdate_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ending date"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_below="@+id/EventendB"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/Ttime_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ending time"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignTop="@+id/Tdate_end"
            android:layout_alignLeft="@+id/Ttime_start"
            android:layout_alignStart="@+id/Ttime_start" />
    </RelativeLayout>



